au BufReadPost *
  \ if line("'\"") > 0 && line("'\"") <= line("$") |
  \   exe "normal g'\"" |
  \   if foldlevel('.') > 0 |
  \	 exe "normal zO" |
  \   endif |
  \ endif

" Delete trailing white space
fun! DeleteTrailingWS()
	let l:winview = winsaveview()
	%s/\s\+$//ge
	call winrestview(l:winview)
endfun

